<div class="container d-flex flex-column align-items-center mb-5">
  <div class="card" style="width: 30rem;">
    <div class="card-body">
      <h2 class="card-title">Mon Panier</h2>
      <ul class="list-group my-3">
        <% @line_items.each do |item| %>
          <li class="list-group-item">
            <p><strong>Photo : </strong><%= item.kitten.name%></p>
            <p><strong>Prix : </strong><%= item.kitten.price / 100.0%> €</p>
            <p><small><%= link_to 'Supprimer', line_item_path(item) , method: :delete %></small></p>
          </li>

          <%end%>
          <li class="list-group-item">
            <% if total_charge(current_order)!= nil %> 
              <h5><strong>Total </strong>
              <%=total_charge(current_order) / 100.0%> €
              </h5>
              <%=link_to 'Passer la commande', new_charge_path, class: "btn btn-success card-btn mb-3"%>
            <% else %>
              Panier vide
            <% end %>
          </li>
      </ul>
      <p>
      <%=link_to "Retourner aux produits", root_path, class: "card-link"%> 
      </p>
    </div>
  </div>
</div>

