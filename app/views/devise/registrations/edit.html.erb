<div class="container d-flex flex-column align-items-center mb-5">
  <h1 class="mt-5">Modifier <%= resource_name.to_s.humanize %></h1>
    <div class="mw-form">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group mt-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

      <div class="form-group mt-3">
        <%= f.label :password %> <i>(laisse vide si aucun changement)</i><br />
        <%= f.password_field :password, autocomplete: "password", class: "form-control" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> caractères minimum</em>
        <% end %>
      </div>

      <div class="form-group mt-3">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group mt-3">
        <%= f.label :current_password %> <i>(envoie ton mot de passe actuel pour confirmer)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="form-group mt-3 mb-3">
        <%= f.submit "Enregistrer", class: "btn btn-success" %>
      </div>
        <% end %> 

    <h4 class="mt-3 mb-3">Supprimer mon compte</h4>
      <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Es-tu sûr.e ?" }, method: :delete, class: "btn btn-danger"%>
      <%= link_to "Back", :back, class: "btn btn-primary me-1" %>
    </div>
</div>
